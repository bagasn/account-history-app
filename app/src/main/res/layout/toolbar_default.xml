<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/primary">

    <ImageView
        android:id="@+id/button_action_toolbar"
        android:layout_width="@dimen/icon_clickable_size"
        android:layout_height="@dimen/icon_clickable_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/icon_clickable_padding"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/icons" />

    <TextView
        android:id="@+id/title_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/button_action_toolbar"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>